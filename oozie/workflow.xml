<workflow-app xmlns="uri:oozie:workflow:0.2" name="Bulkload-wf"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="uri:oozie:workflow:0.2 ">
    <start to="BlueprintsGraphDriver"/>
    <action name="BlueprintsGraphDriver">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="${nameNode}/${tempPath}"/>
            </prepare>
            <main-class>${mainClass}</main-class>
            <arg>${propsPath}</arg>
            <arg>${sysPropsPath}</arg>
            <arg>${hbaseSiteXmlPath}</arg>
        </java>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
        <message>Map/Reduce failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
