<workflow-app xmlns="uri:oozie:workflow:0.2" name="MRKroncker-wf" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="uri:oozie:workflow:0.2 ">
    <start to="BlueprintsGraphDriver" />
    <action name="BluePrintsGraphDriver">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>org.lab41.mapreduce.BlueprintsGraphDriver</main-class>
            <arg>${base_output_dir}/${kronecker_N}/edges</arg>
            <arg>${kronecker_num_annotations}</arg>
            <arg>${kronecker_N}</arg>
            <arg>${t_11}</arg>
            <arg>${t_12}</arg>
            <arg>${t_21}</arg>
            <arg>${t_22}</arg>
        </java>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
        <message>Map/Reduce failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
